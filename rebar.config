{eunit_opts, [verbose]}.

{erl_opts, [debug_info, {parse_transform, lager_transform}]}.
{minimum_otp_vsn, "18.0"}.

{deps, [
    {lager,          "3.5.1"},
    {meck,           "0.8.8"},
    {coveralls,      "1.4.0"},
    {exometer_core,  "1.5.2"}
]}.

{plugins, []}.
{pre_hooks, [{compile, "./dicts_compiler.erl compile"},
             {clean, "./dicts_compiler.erl clean"}]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
